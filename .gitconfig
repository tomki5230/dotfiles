[user]
  name = tomki5230
  email = tos.kimura523@gmail.com
[core]
  editor = vim
  precomposeunicode = true
  quotepath = true
[include]
  path = ~/.gitconfig.local
[push]
  default = simple
[color]
  ui = auto
  status = auto
  diff = auto
  branch = auto
  interactive = auto
  grep = auto
[diff]
  patience = true
[help]
  autocorrect = 0
[alias]
  co = checkout
  ce = commit -v --amend
  st = status --branch --short
  si = status --ignored --short
  branches = branch -a
  remotes = remote -v
  tags = tag -l
  lg = log --graph --all --decorate --abbrev-commit --branches --date=short --pretty=format:\"%C(red)%h%C(reset) %C(green)[%ad]%C(reset) %s %C(cyan)@%an%C(reset) %C(yellow)%d%C(reset)\"
  fp = fetch --prune
  dh = diff --histogram
  dw = diff --word-diff
  dc = diff --cached
  wc = whatchanged
